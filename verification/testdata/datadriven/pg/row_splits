# Floats
exec all
DROP TABLE test_table;
CREATE TABLE test_table (id FLOAT4 PRIMARY KEY);
INSERT INTO test_table VALUES
    ('2132323'),
    (-19999443.23);
----
[pg] INSERT 0 2
[crdb] INSERT 0 2

verify splits=4
----
