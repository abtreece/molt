# UUIDs
exec all
DROP TABLE test_table;
CREATE TABLE test_table (id UUID PRIMARY KEY);
INSERT INTO test_table VALUES
    ('205ffda9-7ad4-4783-9f9c-efad83a5eacd'),
    ('9337f4b4-298c-4fbd-b6c1-ef487d555a57');
----
